    <EditText
        android:id="@+id/inputAddPost"
        android:layout_width="404dp"
        android:layout_height="98dp"
        android:background="#148F77"
        android:gravity="center"
        android:hint="Added something here"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="1dp"></EditText>

    <ImageView
        android:id="@+id/addImagePost"
        android:layout_width="66dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_photo_library_24"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/sendImagePost"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginStart="328dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_send_24"
        tools:ignore="MissingConstraints" />


