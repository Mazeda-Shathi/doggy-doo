<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#148F77"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="0dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:src="@drawable/user_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintBottom_toBottomOf="@id/view"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="117dp"></de.hdodenhof.circleimageview.CircleImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/consId"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Full Name">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="10dp"

            >

            <TextView
                android:id="@+id/ProName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/baseline_person_24"

                android:padding="10dp"
                >

            </TextView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Username">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/ProUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/baseline_person_pin_24"
                android:padding="10dp"
                >

            </TextView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Date of Birth">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/Prodob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/baseline_calendar_month_24"
                android:padding="10dp"
                >

            </TextView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Phone Number">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/ProPNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/baseline_local_phone_24"
                android:padding="10dp"
                >

            </TextView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Email">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/ProEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/baseline_email_24"
                android:padding="10dp"
                >

            </TextView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Password">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/ProPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/baseline_visibility_24"
                android:padding="10dp"
                >

            </TextView>

        </androidx.cardview.widget.CardView>
 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="District">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_home_24"
                android:padding="10dp"
                android:textColor="@color/black"

                android:textSize="18dp">

            </TextView>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="10dp"
           android:text="Thana">

       </TextView>
       <androidx.cardview.widget.CardView
           android:layout_width="140dp"
           android:layout_height="wrap_content"
           app:cardCornerRadius="10dp"
           android:layout_marginBottom="10dp"
           >

           <TextView
               android:id="@+id/thana"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18dp"
               android:textColor="@color/black"
               android:drawableLeft="@drawable/ic_baseline_home_24"

               android:padding="10dp"
               >

           </TextView>

       </androidx.cardview.widget.CardView>
   </LinearLayout>

 </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnAddImage"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:background="#148F77"
                android:text="Update image"
                android:textColor="@color/white"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/backHome"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="#148F77"
                android:layout_marginStart="30dp"
                android:text="Back Home"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>
    </ScrollView>

</LinearLayout>

